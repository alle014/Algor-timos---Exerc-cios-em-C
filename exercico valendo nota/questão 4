#include <stdio.h>

int main() {
    int op;
    float a, b;

    printf("1.Soma  2.Subtração  3.Multiplicação  4.Divisão\n");
    printf("Escolha a operação: ");
    scanf("%d", &op);

    printf("Digite dois números: ");
    scanf("%f %f", &a, &b);

    if (op == 1)
        printf("Resultado: %.2f\n", a + b);
    else if (op == 2)
        printf("Resultado: %.2f\n", a - b);
    else if (op == 3)
        printf("Resultado: %.2f\n", a * b);
    else if (op == 4) {
        if (b != 0)
            printf("Resultado: %.2f\n", a / b);
        else
            printf("Erro: divisão por zero!\n");
    } else
        printf("Opção inválida.\n");

    return 0;
}
